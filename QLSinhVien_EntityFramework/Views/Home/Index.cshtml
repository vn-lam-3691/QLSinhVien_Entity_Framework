@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<QLSinhVien_DatabaseFirst.Models.SinhVien>

<div class="text-center">
    <h1 class="display-4">Database First</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Mã sinh viên</th>
                <th scope="col">Họ tên</th>
                <th scope="col">Địa chỉ</th>
                <th scope="col">Lớp</th>
                <th scope="col">Khoa</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.MaSv</th>
                    <td>@item.Hoten</td>
                    <td>@item.DiaChi</td>
                    <td>@item.MaLop</td>
                    <td>@item.MaLopNavigation.MaKhoaNavigation.TenKhoa</td>
                </tr>
            }
        </tbody>
    </table>
</div>
